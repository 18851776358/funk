<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:foreground="@drawable/card_foreground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp"
    app:contentPaddingBottom="@dimen/dp_10"
    app:contentPaddingTop="@dimen/dp_10"
    android:layout_marginTop="6dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_status_playing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_playing_tag"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/playing"
            android:textColor="@color/white"
            android:textSize="6sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            />
        <com.yjl.funk.imageloader.frescoview.FrescoImageView
            android:id="@+id/iv_song"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:gravity="bottom"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_gray"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_music_more"
            android:scaleType="centerInside"
            android:background="@drawable/common_ripple"/>
    </LinearLayout>
</android.support.v7.widget.CardView>